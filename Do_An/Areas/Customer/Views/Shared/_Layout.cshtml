<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Assets/Customer/css/style.css">
    <link rel="stylesheet" href="/Assets/Customer/css/base.css">
    <link rel="stylesheet" href="/Assets/Customer/fonts/fontawesome-free-5.15.1-web/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Trang chủ</title>
</head>
<body>
    <div class="main">
        <div class="main__header">
            <div class="main__header-head">
                <ul class="main__header-connect">
                    <li class="main__header-item icon"><a href=""><i class="header-icon fab fa-facebook-square"></i></a></li>
                    <li class="main__header-item icon"><a href=""><i class="header-icon fab fa-instagram"></i></a></li>
                </ul>

                <ul class="main__header-list">
                    <li class="main__header-item icon"><a href=""><i class="header-icon far fa-question-circle"></i>Trợ giúp</a></li>
                    <li class="main__header-item separate"><a href="Signup.html">Đăng ký</a></li>
                    <li class="main__header-item"><a href="Login.html">Đăng nhập</a></li>
                </ul>
            </div>
            <div class="main__header-container">
                <div class="main__header-logo">
                    <a href="Main.html" class="logo">NoLogo</a>
                </div>

                <div class="main__header-search">
                    <input type="checkbox" id="check-search">
                    <div class="search-box">
                        <div class="search-txt-wrap">
                            <input type="text" class="search-txt" placeholder="Tìm kiếm" required>

                            <div class="search-history">
                                <h3 class="search-history-heading">Lịch sử tìm kiếm</h3>
                                <ul class="search-history-list">
                                    <li class="search-history-item">
                                        <a href="">Đồng hồ Daniel Wellington</a>
                                    </li>
                                    <li class="search-history-item">
                                        <a href="">Casio</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <label for="check-search" class="search-btn"><i class="fas fa-search"></i></label>
                    </div>
                </div>

                <div class="main__header-cart">
                    <div class="main__header-cart-wrap">
                        <a href="">
                            <i class="header__cart-icon fas fa-shopping-cart"></i>
                        </a>

                        <div class="main__header-cart-list main__header-cart-list--no-cart">
                            <img src="/images/no-cart.png" alt="" class="main__header-cart-no-cart-img">
                            <p class="main__header-list-no-cart-msg">
                                Chưa có sản phẩm
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="main__container">
            <nav class="container_navbar">
                <ul class="container_navbar-list">
                    <li class="container_navbar-item"><a href="Main.html" class="container_navbar-main"><b>Trang chủ</b></a></li>
                    <li class="container_navbar-item container_navbar-item-catalog">
                        <a href="Product.html" class="">
                            Danh mục<i class="container_navbar-icon fas fa-caret-down"></i>
                        </a>

                        <ul class="container_navbar-option-list">
                            <li class="container_navbar-option-item"><a href="">Đồng hồ nam</a></li>
                            <li class="container_navbar-option-item"><a href="">Đồng hồ nữ</a></li>
                            <li class="container_navbar-option-item"><a href="">Phụ kiện</a></li>
                        </ul>
                    </li>
                    <li class="container_navbar-item container_navbar-item-catalog">
                        <a href="Product.html" class="">
                            Thương hiệu<i class="container_navbar-icon fas fa-caret-down"></i>
                        </a>

                        <ul class="container_navbar-option-list">
                            <li class="container_navbar-option-item"><a href="">Anne Klein</a></li>
                            <li class="container_navbar-option-item"><a href="">Bulova</a></li>
                            <li class="container_navbar-option-item"><a href="">Caravelle</a></li>
                            <li class="container_navbar-option-item"><a href="">Casio</a></li>
                            <li class="container_navbar-option-item"><a href="">Daniel Wellington</a></li>
                            <li class="container_navbar-option-item"><a href="">Fossil</a></li>
                            <li class="container_navbar-option-item"><a href="">Marc Jacobs</a></li>
                            <li class="container_navbar-option-item"><a href="">Micheal Kors</a></li>
                            <li class="container_navbar-option-item"><a href="">Skagen</a></li>
                        </ul>
                    </li>
                    <li class="container_navbar-item"><a href="News.html" class="">Tin tức</a></li>
                </ul>
            </nav>

            @RenderBody()

            <div class="main__footer">
                <div class="main__footer-item">
                    <i class="fas fa-fighter-jet"></i>
                    <p>FREESHIP</p>
                </div>
                <div class="main__footer-item">
                    <i class="fas fa-box-open"></i>
                    <p>Hoàn trả miễn phí</p>
                </div>
                <div class="main__footer-item">
                    <i class="fas fa-tools"></i>
                    <p>Bảo hành 2 năm</p>
                </div>
            </div>


        </div>
    </div>
</body>
</html>
